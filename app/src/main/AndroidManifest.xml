<?xml version="1.0" encoding="utf-8"?>
<!-- AndroidManifest.xml - File cấu hình chính của ứng dụng Android -->
<!-- Định nghĩa permissions, activities, và các thành phần khác của ứng dụng -->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== PERMISSIONS (Quyền truy cập) ========== -->
    
    <!-- Quyền truy cập Internet - cần thiết cho chat và voice call -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Quyền ghi âm - cần thiết cho voice call -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Quyền thay đổi cài đặt âm thanh - cần thiết cho voice call -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    
    <!-- Quyền kiểm tra trạng thái mạng - để kiểm tra kết nối -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Quyền giữ màn hình sáng - để màn hình không tắt khi gọi -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Quyền chạy foreground service - cho voice call background -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- ========== APPLICATION CONFIGURATION ========== -->
    
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OmegeleApp"
        tools:targetApi="31">
        
        <!-- ========== ACTIVITIES ========== -->
        
        <!-- MainActivity - Màn hình chính của ứng dụng, là launcher activity -->
        <activity 
            android:name=".activities.MainActivity"
            android:exported="true">                   <!-- Cho phép launch từ bên ngoài -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />      <!-- Main action -->
                <category android:name="android.intent.category.LAUNCHER" /> <!-- Launcher category -->
            </intent-filter>
        </activity>

        <!-- LoginActivity - Màn hình đăng nhập -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />                 <!-- Cho phép launch từ bên ngoài -->
            
        <!-- RegisterActivity - Màn hình đăng ký -->
        <activity android:name=".activities.RegisterActivity" />
        
        <!-- ChatActivity - Màn hình chat văn bản -->
        <activity android:name=".activities.ChatActivity" />
        
        <!-- ========== VOICE CALL ACTIVITIES ========== -->
        
        <!-- VoiceCallActivity - Màn hình cuộc gọi thoại chính -->
        <activity 
            android:name=".activities.VoiceCallActivity"
            android:screenOrientation="portrait"
            android:keepScreenOn="true" />
            
        <!-- VoiceCallWaitingActivity - Màn hình chờ kết nối -->
        <activity 
            android:name=".activities.VoiceCallWaitingActivity"
            android:screenOrientation="portrait" />
            
        <!-- VoiceCallSettingsActivity - Màn hình cài đặt cuộc gọi -->
        <activity 
            android:name=".activities.VoiceCallSettingsActivity" />

    </application>

</manifest>